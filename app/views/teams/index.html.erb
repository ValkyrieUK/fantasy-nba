<div id="outline" style="background-color:#1874CD; color:white;border:2px solid;border-radius:25px;box-shadow: 0px 2px 3px rgba(0, 0, 0, 0.4);border-color:black;">
<div id="link"><% if user_signed_in? %>
  <%= link_to("Add a new team", new_team_path) %></div>
<br>
<div id="link"><%= link_to("Delete all teams from the database", remove_all_teams_path) %></div>
<% else %>
<% end %>
<h1>List of teams currently avalible</h1>

<table>
  <tr>
    <th>Team</th>
    <th>Wins</th>
    <th>Last 10</th>
    <th>Streak</th>
  </tr>

<% @teams.each do |team| %>
  <tr>
    <td><%= link_to team.name, team %></td>
    <td><%= team.wins %></td>
    <td><%= team.l10 %></td>
    <td><%= team.streak %></td>
    <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= link_to 'edit', edit_team_path(team) %></td>
    <% end %>
  </tr>
</table>
</div>
