<div id="link"><%= link_to("Add a new team", new_team_path) %></div>
<%= link_to "Delete", team_path %> 
<h1>List of teams currently avalible</h1>

<table>
  <tr>
    <th>Team</th>
    <th>Hometown</th>
  </tr>

<%@teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.hometown %></td>

    <td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
</table>

